		{
			"name": "Faceted Search with Aggregations",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"query\": {\n        \"bool\": {\n        \"must\": [\n            {\"match\": {\"category\": \"Electronics\"}}\n        ],\n        \"filter\": [\n            {\"range\": {\"price\": {\"gte\": 50, \"lte\": 500}}},\n            {\"term\": {\"availability\": \"in_stock\"}}\n        ]\n        }\n    },\n    \"aggs\": {\n        \"brands\": {\n            \"terms\": {\"field\": \"brand\", \"size\": 10}\n        }, \n        \"price_ranges\": {\n            \"range\": {\n                \"field\": \"price\",\n                \"ranges\": [\n                    {\"to\": 100, \"key\": \"UNDER_$100\"},\n                    {\"from\": 100, \"to\": 300, \"key\": \"$100-$300\"},\n                    {\"from\": 300, \"key\": \"ABOVE_$300\"}\n                ]\n            }\n        },\n        \"rating_stats\": {\n            \"stats\": {\"field\": \"rating\"}\n        }\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "http://localhost:9200/ecommerce_products/_search"
			},
			"response": []
		},
