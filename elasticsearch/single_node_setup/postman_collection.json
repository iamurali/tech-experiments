		{
			"name": "Get products",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"query\": {\n        \"multi_match\": {\n            \"query\": \"skin music\",\n            \"fields\": [\n                \"title^3\", \n                \"description\",\n                \"category^2\",\n                \"tags^1.5\"  \n            ],\n            \"type\": \"cross_fields\",\n            \"operator\": \"and\"\n        }\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "http://localhost:9200/ecommerce_products/_search"
			},
			"response": []
		},
